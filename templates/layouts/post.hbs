---
layout: master
---
<article class="status-publish format-standard hentry">
    <header>
        <h1 class="entry-title">{{ pageTitle }}</h1>
        {{#if featuredImage}}{{#with featuredImage}}
            {{> image }}
        {{/with}}{{/if}}
    </header>
    <div class="entry-content">
{{#markdown}}
{% body %}
{{/markdown}}
    </div>
    <footer class="entry-footer">
        <dl class="entry-meta typl8-lining">
            <dt>Posted</dt>
            <dd><time itemprop="datePublished" datetime="{{ moment posted format="YYYY-MM-DDTHH:mm:ssZ" }}">{{ moment posted 'YYYY-MM-DD' }}</time></dd>
            <dt>Category</dt>
            <dd>{{ category }}</dd>
            <dt>Tags</dt>
            <dd itemprop="keywords">{{ tags }}</dd>
        </dl>
    </footer>
</article>
