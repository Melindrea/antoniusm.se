---
layout: master
---
<article class="hentry {{ taxonomies }}">
    {{> header}}
    <div class="entry-content">
{{#markdown}}
{% body %}
{{/markdown}}
    </div>
    <footer class="entry-footer">
        {{> display-pager }}

        <dl class="entry-meta typl8-lining">
            <dt>Posted</dt>
            <dd><time itemprop="datePublished" datetime="{{ moment posted format="YYYY-MM-DDTHH:mm:ssZ" }}">{{ moment posted 'YYYY-MM-DD' }}</time></dd>
            <dt>Category</dt>
            <dd>{{ category }}</dd>
            <dt>Tags</dt>
            <dd itemprop="keywords">{{ tags }}</dd>
        </dl>
    </footer>
</article>
{{> comments }}
