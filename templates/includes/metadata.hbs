<title itemprop="name"{{#if hasFeed}} class="p-name"{{/if}}>{{ siteTitle title }}</title>
<link href="{{ site.url }}/rss.xml" rel="alternate" type="application/rss+xml" title="What's New on {{ site.title }}">

<link rel="canonical" href="{{ canonical }}">
{{#if excerpt}}
    <meta name="description" content="{{ excerpt }}"{{#if hasFeed}} class="p-summary"{{/if}}>
{{/if}}

<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="{{ title }}">
{{#if excerpt}}
    <meta itemprop="description" content="{{ excerpt }}">
{{/if}}

{{#if featuredImage }}
    <meta itemprop="image" content="{{ site.url }}/{{ featuredImage.revSrc }}">
{{/if}}

<!-- Twitter Card data -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title }}">
{{#if excerpt}}
    <meta name="twitter:description" content="{{ excerpt }}">
{{/if}}
<meta name="twitter:creator" content="@melindrea">
{{#if featuredImage }}
    <!-- Twitter summary card with large image must be at least 280x150px -->
    <meta name="twitter:image:src" content="{{ site.url }}/{{ featuredImage.revSrc }}">
{{/if}}

<!-- Open Graph data -->
<meta property="og:title" content="{{ title }}">
<meta property="og:type" content="{{ metaType }}">
<meta property="og:url" content="{{ canonical }}">
{{#if featuredImage}}
    <meta property="og:image" content="{{ site.url }}/{{ featuredImage.revSrc }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
{{/if}}

{{#if excerpt}}
    <meta property="og:description" content="{{ excerpt }}">
{{/if}}
<meta property="og:site_name" content="{{ site.title }}">

{{#if article}}
    <meta property="article:published_time" content="{{ moment posted format="YYYY-MM-DDTHH:mm:ssZ" }}">
    <meta property="article:modified_time" content="{{ lastUpdated "YYYY-MM-DDTHH:mm:ssZ" }}">
    <meta property="article:section" content="{{ category }}">
    <meta property="article:tag" content="{{ tags }}">
    <meta property="article:author:name" content="Antonius M. Hogebrandt">
{{/if}}

{{#if site.pinterest }}
<!-- pinterest -->
<meta name="p:domain_verify" content="{{ site.pinterest }}">
{{/if}}
